<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/chart_light_red"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".login1">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phixman"
        ></ImageView>

    <LinearLayout

        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textColor="@color/red_dark"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login as Partner "></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="mobile number"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/app_caption_light_grey"
            android:fontFamily="sans-serif-medium"></EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="password"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/app_caption_light_grey"
            android:fontFamily="sans-serif-medium"></EditText>
        <Button
            android:onClick="onLogin"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/chart_light_red"
            android:text="login"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"></Button>
        <TextView
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Trouble Logging in? "
            ></TextView>

    </LinearLayout>
</LinearLayout>